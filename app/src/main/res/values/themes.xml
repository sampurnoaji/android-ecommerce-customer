<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
    </style>

    <style name="Theme.Primary" parent="AppTheme">
        <item name="colorSecondaryVariant">?colorPrimary</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar" >
        <item name="titleTextColor">?colorOnPrimary</item>
        <item name="navigationIconTint">?colorOnPrimary</item>
    </style>
</resources>