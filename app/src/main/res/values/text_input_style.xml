<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="helperTextTextAppearance">@style/Text</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:background">@drawable/text_input_background_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Text.Heading4</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Text.Heading4</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
</resources>