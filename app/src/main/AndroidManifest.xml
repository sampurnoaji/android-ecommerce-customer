<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.io.android.olebsai">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="id.io.android.olebsai.core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.account.address.add.AddressAddActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.order.processed.OrderProcessedActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.account.address.list.AddressListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.user.otp.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.user.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.user.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.order.checkout.OrderCheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.product.detail.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name="id.io.android.olebsai.presentation.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>